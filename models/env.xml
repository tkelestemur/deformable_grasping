<mujoco>
    <include file="shared.xml"/>
    <worldbody>
        <!-- Lights -->
        <light directional="true" ambient="0.2 0.2 0.2" specular="0.3 0.3 0.3" pos="0 0 4" dir="0 0 -1" name="light"/>

        <!-- Floor -->
        <geom name="floor" pos="0 0 0" size="20 20 1e-9" type="plane" material="mat_plane"/>

        <!-- Robot -->
        <include file="ur5_gripah_mujoco.xml"/>

        <!-- UR-Base -->
        <geom name="ur_base" pos="0 0 0.5" size="0.15 0.15 0.5" type="box" mass="2000"/>

        <!-- Table -->
        <geom name="table" pos="0.7 0 0.4" size="0.30 0.40 0.4" type="box" mass="2000"/>

        <body name="sponge" pos="0.70 0 0.825">
            <freejoint/>
            <composite type="box" count="3 3 3" spacing="0.025">
                <skin texcoord="true" material="mat_sponge" rgba=".7 .7 .7 1"/>
                <geom type="capsule" size=".005 0.01" rgba=".8 .2 .1 1"/>
            </composite>
        </body>


    </worldbody>

    <actuator>
        <!-- Arm Actuators -->
        <velocity ctrllimited="true" ctrlrange="-3.15 3.15" kv="50" name='shoulder_pan_vel'  joint='shoulder_pan_joint'/>
        <velocity ctrllimited="true" ctrlrange="-3.15 3.15" kv="50" name='shoulder_lift_vel' joint='shoulder_lift_joint' />
        <velocity ctrllimited="true" ctrlrange="-3.20 3.20" kv="50" name='forearm_vel'       joint='elbow_joint' />
        <velocity ctrllimited="true" ctrlrange="-3.20 3.20" kv="50" name='wrist_1_vel'       joint='wrist_1_joint' />
        <velocity ctrllimited="true" ctrlrange="-3.20 3.20" kv="50" name='wrist_2_vel'       joint='wrist_2_joint'/>
        <velocity ctrllimited="true" ctrlrange="-3.20 3.20" kv="50" name='wrist_3_vel'       joint='wrist_3_joint'/>

        <!-- Gripper Actuators -->
        <!--<position ctrllimited="true" ctrlrange="-1.0472 1.0472"  joint="wide_finger_joint"   kp="1000" forcelimited="false" forcerange="-20 20"/>-->
        <!--<position ctrllimited="true" ctrlrange="-1.0472 1.0472"  joint="narrow_finger_joint" kp="1000" forcelimited="false" forcerange="-20 20"/>-->

        <velocity ctrllimited="true" ctrlrange="-2.0 2.0"  kv="100" name="wide_finger_vel"   joint="wide_finger_joint"   />
        <velocity ctrllimited="true" ctrlrange="-2.0 2.0"  kv="100" name="narrow_finger_vel" joint="narrow_finger_joint" />
    </actuator>

</mujoco>
